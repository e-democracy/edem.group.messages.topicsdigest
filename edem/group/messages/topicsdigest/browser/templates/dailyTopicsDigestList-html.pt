<tal:block define="topics options/topicsDigest/topics | view/topicsDigest/topics | python:[]">
    <div id="topics" class="section"
     style="margin: 5px 0px; background-color: #FFFFFF; border: 1px solid #999999; padding: 7px; border-radius: 5px;">
      <a name="topics_list" style="color: #0645AD; text-decoration: none;"></a>
      <h2 style="font-size: 1.4em; margin: 10px 0px; line-height: 150%; color: black;"> Today's Active Topics</h2>
      <div class="topic_listing" tal:repeat="topic topics">
        <a name="listing" style="color: #0645AD; text-decoration: none;" tal:attributes="name string:listing${repeat/topic/number}"></a>
        <h3
         style="font-size: 1.1em; font-weight: normal; line-height: 150%; color: black;">
         <span class="topic_number"
          style="color: #606060;"><tal:block content="repeat/topic/number"/>.</span> <a href="#" style="font-weight: normal; text-decoration: none; color: black;" tal:attributes="href topic/topic_url" tal:content="topic/topic_subject">Topic Subject</a></h3>
        <div class="topic_buttons" style="display: inline-block;">
         <table style="display:inline-block; padding: 0px; margin: 0px;">
           <tr>
             <td style="height: 3px;"></td>
           </tr>
           <tr>
             <td style="width: 2px; padding: 0px; margin: 0px;"></td>
             <td>
               <a href="#topic" tal:attributes="href string:#topic${repeat/topic/number}" class="button" style="max-width: 120px; font-size: 1em; font-weight: bold; margin: 0px; background-color: #D4ECF5; border: 1px solid #003366; padding: 0.4em 0.6875em; color: black; text-decoration: none; display: inline-block; text-align: center; border-radius: .3125em;">Read Clip</a>
             </td>
             <td style="width: 2px; padding: 0px; margin: 0px;"></td>
           </tr>
         </table>
         <table style="display:inline-block; padding: 0px; margin: 0px;">      
           <tr>
             <td style="height: 3px;"></td>
           </tr>
           <tr>
             <td style="width: 2px; padding: 0px; margin: 0px;"></td>
             <td>
               <a href="#" tal:attributes="href topic/topic_url" class="button" style="max-width: 120px; font-size: 1em; font-weight: bold; margin: 0px; background-color: #D4ECF5; border: 1px solid #003366; padding: 0.4em 0.6875em; color: black; text-decoration: none; display: inline-block; text-align: center; border-radius: .3125em;">Read Online</a>
             </td>
             <td style="width: 2px; padding: 0px; margin: 0px;"></td>
           </tr>
         </table>
        </div>
      </div>
      <div class="topic_help">
        <h3 style="font-size: 1.1em; font-weight: normal; margin: 10px 0px; line-height: 150%; color: black;">Start a New Topic</h3>
        <p style="margin-left: 11px;">To start a new topic, email <a href="#" style="color: #0645AD; text-decoration: none;" tal:attributes="href python: 'mailto:%s' % view.groupEmail" tal:content="view/groupEmail">Email Address</a>. Be sure to include a subject.</p>
      </div>
    </div>
</tal:block>
