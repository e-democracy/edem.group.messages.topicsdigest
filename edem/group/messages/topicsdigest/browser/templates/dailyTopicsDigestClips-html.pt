<tal:block
  define="groupUrl options/groupUrl | view/groupInfo/url;
          topics options/topicsDigest/topics | view/topicsDigest/topics | python:[]">
    <div id="excerpts" class="section" style="margin: 5px 0px; background-color: #FFFFFF; border: 1px solid #999999; padding: 10px 0px 0px; border-radius: 5px;">
      <h2 style="font-size: 1.4em; line-height: 150%; margin: 10px 0px; color: black; padding: 0px 10px;">Topic Clips</h2>
      <p style="padding: 0px 10px;">Most recent clips only. Visit <a href="#" style="color: #0645AD; text-decoration: none;" tal:attributes="href view/groupInfo/url">forum home</a> for more.</p>
      <table class="excerpt_table" 
        style="margin: 0px; border-top-color: #003366; background-color: #FFFFFF; border-bottom-style: solid; border-bottom-width: 1px; border-bottom-color: #003366; border-top-style: solid; border-top-width: 1px; border-spacing: 0px; padding-bottom: 10px; width: 100%;"
        tal:repeat="topic topics" 
        tal:attributes="class python: 'excerpt_table odd' if repeat['topic'].even() else 'excerpt_table even'; bgcolor python: '#FFFFFF' if repeat['topic'].even() else '#E1E1E1'">
        <tbody>
          <tr>
            <td class="excerpt_title" style="border-collapse: collapse; background-color: #aed8e6; padding: 0px 5px;" bgcolor="#aed8e6">
              <a name="topic" style="color: #0645AD; text-decoration: none;" tal:attributes="name string:topic${repeat/topic/number}" >
                <h3 style="font-size: 1.1em; font-weight: normal; margin: 10px 0px; line-height: 150%; color: black;">
                  <span class="topic_number" style="color: #606060;"><tal:block content="repeat/topic/number"/>.</span>
                  <a href="#" 
                   style="font-weight: normal; text-decoration: none; color: black;" 
                   tal:attributes="href topic/topic_url" tal:content="topic/topic_subject">Topic Subject</a>
                </h3>
              </a>
            </td>
          </tr>
          <tr>
            <td class="excerpt_body" style="border-collapse: collapse; padding: 15px 5px 10px;">
              <img 
               tal:condition="topic/last_post_author/imageUrl" 
               tal:attributes="src topic/last_post_author/imageUrl" 
               style="margin: 0.3em 15px 5px 5px; line-height: 100%; outline: none; border: 0; text-decoration: none; height: auto;"
               align="left"/>
              <p style="margin: 0px;"><tal:block content="structure topic/last_post_clip">Post Clip</tal:block> [ <a href="#" tal:attributes="href topic/topic_url" style="color: #0645AD; text-decoration: none;"><tal:block condition="topic/last_post_more_available">read more</tal:block><tal:block condition="not:topic/last_post_more_available">read online</tal:block></a>  ]</p>
            </td>
          </tr>
          <tr>
            <td class="excerpt_metadata" style="margin: 0px; border-collapse: collapse; padding: 0px; display: table; width: 100%;">
              <p class="excerpt_byline" style="font-size: 1.1em; margin: 0px; line-height: 130%; color: #367da9; padding: 0px 5px; display: table-cell; vertical-align: middle; text-align: center; width: 33%;" align="center"><tal:block content="topic/last_post_date_str">Time of Post</tal:block> by <a href="#" style="font-size: 1.1em; color: #367da9; text-decoration: none;" tal:attributes="href topic/last_post_author/url" tal:content="topic/last_post_author/name">Author Name</a></p>
              <p style="margin: 0px; line-height: 130%; padding: 0px 5px; display: table-cell; text-align: center; vertical-align: middle; width: 33%;" align="center"><strong>Posts</strong>: <tal:block content="topic/num_posts_today"/> New - <tal:block content="topic/num_posts_total"/> Total</p>
              <p style="margin: 0px; line-height: 130%; padding: 0px 5px; display: table-cell; text-align: center; vertical-align: middle; width: 33%;" align="center"><strong>Keywords</strong>: <tal:block repeat="keyword topic/keywords"><a href="#" style="color: #0645AD; text-decoration: none;" tal:attributes="href string:${view/siteInfo/url}/s/?g=${view/groupInfo/id}&s=$keyword" tal:content="keyword">keyword</a> </tal:block></p>
              <div class="excerpt_buttons" style="min-width: 250px; margin: 0px; padding: 0px 5px; display: table-cell; text-align: center; vertical-align: middle;" align="center">
                <a href="#topics_list" class="button" style="max-width: 120px; font-size: 1em; font-weight: bold; margin: 1px 5px; background-color: #D4ECF5; border: 1px solid #003366; padding: 0.4em 0.6875em; color: black; text-decoration: none; display: inline-block; text-align: center; border-radius: .3125em;">Go to Top</a> <a href="#" class="button" style="max-width: 120px; font-size: 1em; font-weight: bold; margin: 1px 5px; background-color: #D4ECF5; border: 1px solid #003366; padding: 0.4em 0.6875em; color: black; text-decoration: none; display: inline-block; text-align: center; border-radius: .3125em;" tal:attributes="href topic/topic_url">Read Online</a>
              </div>
            </td>
          </tr>
        </tbody>
      </table>

    </div>
</tal:block>
